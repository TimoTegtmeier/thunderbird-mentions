{
  "manifest_version": 2,
  "name": "Composer Contacts Mention",
  "description": "Use @ to mention somebody on an email to bold and link.",
  "version": "0.6.4",
  "author": "Joaquin Ayuso de Paul",
  "applications": {
    "gecko": {
      "id": "{5ce3f3ea-38fc-11eb-adc1-0242ac120002}",
      "strict_min_version": "78.5.0"
    }
  },
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "compose_action": {
    "default_title": "Add to CC",
    "default_icon": "/icon-add-recipients.png",
    "theme_icons": [
      {
        "light": "/icon-add-recipients-dark.png",
        "dark": "/icon-add-recipients.png",
        "size": 32
      }
    ]
  },
  "permissions": [
    "compose",
    "addressBooks"
  ],
  "icons": {
    "64": "/icon-64.png",
    "32": "/icon-32.png",
    "16": "/icon-16.png"
  }
}
